{
  "include": ["src/**/*"],
  "exclude": ["src/**/*.test.ts"],
  "compilerOptions": {
    "lib": ["ESNext"],
    "target": "ESNext",
    "module": "Preserve",
    "moduleDetection": "force",
    "allowJs": true,
    "outDir": "dist",
    "rootDir": "src",
    "declaration": true,
    "allowSyntheticDefaultImports": true
  },
  "extends": ["@tsconfig/strictest/tsconfig"]
}
